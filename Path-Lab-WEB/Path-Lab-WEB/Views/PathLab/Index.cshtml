<style>
    .containers {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

        .containers .buttons {
            display: flex;
            flex-direction: column;
        }

        .containers a {
            padding: 15px 20px;
            /*font: 13px $button-font;  Assuming $button-font is defined elsewhere in your code */
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-decoration: none;
            text-align: center;
            margin: 1em;
        }

            .containers a:hover {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.20), 0 6px 20px 0 rgba(0, 0, 0, 0.20);
            }

    media (min-width: 417px) and (max-width: 567px) {
        .containers a

    {
        padding: 15px 30px;
        /*font: 16px $button-font;*/
    }

    }

    media (min-width: 568px) {
        .containers a

    {
        padding: 15px 50px;
        /*font: 20px $button-font;*/
    }

    }

    .button3 {
        color: green;
        background: linear-gradient(to right, #add8e6, #90ee90); /* light blue to light green gradient */
        border-radius: 8px;
        transition: 0.2s ease-in-out;
        display: inline-block; /* Ensures that the button doesn't take up the full width */
        text-align: center; /* Centers the text horizontally */
        line-height: 1; /* Ensures the text is vertically centered */
        cursor: pointer;
        overflow: hidden; /* Hides the overflow from the border-radius change on hover */
    }

        .button3:hover {
            border-radius: 30px;
        }
</style>

