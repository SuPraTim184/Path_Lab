@* @model Path_Lab_ENTITY.eLogin *@
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .btn-color {
            background-color: #0e1c36;
            color: #fff;
        }

        .profile-image-pic {
            height: 200px;
            width: 200px;
            object-fit: cover;
        }



        .cardbody-color {
            background-color: #ebf2fa;
        }

        a {
            text-decoration: none;
        }
    </style>
    <title>@ViewData["Title"] - Path_Lab_WEB</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Your website description">
    <meta name="author" content="Your Name">

    <!-- Add your favicon and other meta tags here -->
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Raleway:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">


    <!-- Template Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">

    @RenderSection("Head", required: false)
</head>

<body>

    <!-- ======= Header ======= -->
    <section id="topbar" class="topbar d-flex align-items-center">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-envelope d-flex align-items-center"><a href="#">yourlabsample@gmail.com</a></i>
                <i class="bi bi-phone d-flex align-items-center ms-4"><span>+91-9090909090</span></i>
            </div>
            <div class="social-links d-none d-md-flex align-items-center">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
            </div>
        </div>
    </section><!-- End Top Bar -->

    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1>Your Lab<span>.</span></h1>
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a href="~/PathLab/Index">Home</a></li>
                    <li><a href="~/PathLab/Index#about">About</a></li>
                    <li><a href="~/PathLab/Index#services">Services</a></li>                    
                    <li><a href="~/PathLab/Index#contact">Contact</a></li>
                    @*<li><a href="#Login">Login</a></li>*@

                    @if (Context.Request.Cookies["UserId"] != null)
                    {
                        <li class="dropdown">
                            <a href="#">
                                <span>
                                    Doctor
                                </span> <i class="bi bi-chevron-down dropdown-indicator"></i>
                            </a>
                            <ul>
                                <li><a href="~/PathLab/Index#Doctor">Doctor Details</a></li>
                                <li><a href="~/PathLab/AppointmentBooking">Booking Doctor Appointment</a></li>
                                <li><a href="~/PathLab/ManageAppointmentBooking">Appointment History</a></li>
                            </ul>
                        </li>
                        
                        <li class="dropdown">
                            <a href="#">
                                <span>
                                    Test
                                </span> <i class="bi bi-chevron-down dropdown-indicator"></i>
                            </a>
                            <ul>
                                <li><a href="~/PathLab/Index#Test">Test Details</a></li>
                                <li><a href="~/PathLab/TestBooking">Booking Test</a></li>
                                <li><a href="~/PathLab/ManageTestBooking">Test History</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#">
                                <span>
                                    @Context.Request.Cookies["UFullName"].ToString()
                                </span> <i class="bi bi-chevron-down dropdown-indicator"></i>
                            </a>
                            <ul>
                                <li><a href="~/PathLab/UserProfile">Profile</a></li>
                                <li><a href="~/PathLab/ChatUsUser">Chat with Us</a></li>
                                <li><a href="~/Home/logout">Logout</a></li>
                            </ul>
                        </li>

                    }
                    else
                    {

                        <li><a href="~/PathLab/Index#Doctor">Doctor</a></li>
                        <li><a href="~/PathLab/Index#Test">Test</a></li>
                        <li><a href="~/Home/Login">Login</a></li>
                        @* <li><a data-bs-toggle="modal" data-bs-target="#exampleModal">Login</a></li> *@
                    }
                </ul>
            </nav><!-- .navbar -->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>


        <!-- Modal-->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" style="max-width:80%">
            @*<div class="modal-dialog" style="max-width:40%">*@
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Login-Your PathLab</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("login", "home", FormMethod.Post, new { @class = "card-body cardbody-color p-sm-1" }))
                        {
                            {
                                <div class="text-center">
                                    <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" alt="profile">
                                </div>

                                <div class="mb-3">
                                    @* @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter Username...", required = "required" }) *@
                                    <input type="text" class="form-control" placeholder="Enter Username..." , required="required" id="UserName" name="UserName">
                                </div>
                                <div class="mb-3">
                                    @* @Html.TextBoxFor(model => model.LoginPassword, new { @class = "form-control", @placeholder = "Enter Password...", @type = "password", required = "required" }) *@
                                    <input type="password" class="form-control" placeholder="Enter Password..." , required="required" id="LoginPassword" name="LoginPassword">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-info px-5 mb-5 w-100">Login</button>
                                </div>
                                <div class="form-text text-center mb-5 text-dark">
                                    Not Registered? <a href="~/UserAdd/AddEditUser" class="text-dark fw-bold">Create an Account</a> |
                                    <a href="#" class="text-dark fw-bold">Forgot Password</a>
                                </div>
                            }
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </header><!-- End Header -->
    <!-- End Header -->
    @RenderBody()


    <!-- ======= Footer ======= -->
    <hr>
    <div id="footer" class="footer">
        <center>
            <div class="container mt-4">
                <div class="copyright">
                    &copy; Copyright <strong><span>Your Lab</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/impact-bootstrap-business-website-template/ -->
                    @* Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> *@
                </div>
            </div>
        </center>

    </div><!-- End Footer -->
    <!-- End Footer -->
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
